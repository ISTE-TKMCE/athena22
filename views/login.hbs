  <body>
    <div class="outercontainer">

        <section class="semiCircle"><a href="/home"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>
            <section class='curved designer'></section>
        </section>
    </div>
    <div class="page-holder d-flex align-items-center">
      <div class="container">
        <div class="row align-items-center py-5">
          <div class="col-5 col-lg-7 mx-auto mb-5 mb-lg-0">
            <div class="pr-lg-5"><img src="/img/illustration.svg" alt="" class="img-fluid"></div>
          </div>
          <div class="col-lg-5 px-lg-4">
            <h1 class="text-base text-primary text-uppercase mb-4">Login Athena'22</h1>
            <h2 class="mb-4">Welcome back !</h2>
            <p class="text-muted"></p>
            <form id="loginForm" method="POST" action="/auth/login" class="mt-4">
              <div class="form-group mb-4" >
                <input type="text" name="email" placeholder="Username or Email address" class="form-control border-0 shadow form-control-lg">
              </div>
              <div class="form-group mb-4">
                <input type="password" name="password" placeholder="Password" class="form-control border-0 shadow form-control-lg text-violet">
              </div>
              <div class="form-group mb-4">
                <div class="custom-control custom-checkbox">
                  <input id="customCheck1" type="checkbox" checked class="custom-control-input">
                  <label for="customCheck1" class="custom-control-label">Remember Me</label>
                </div>
              </div>
              <div class="d-flex justify-content-around">
                  <button type="submit" class="btn btn-primary shadow px-5" style="background: linear-gradient(to right, #1FA2FF 0%, #12D8FA  51%, #1FA2FF  100%);color:black;">Log in</button>
              <a href="/signup" class="btn btn-primary shadow px-3" style="background: linear-gradient(to right, #1FA2FF 0%, #12D8FA  51%, #1FA2FF  100%);color:black;">Register Instead</a>
           
              </div>
             </form>
             {{#if message}}
                 <div id="error" >
                     <h6 class="alert alert-danger mt-4">{{message}}</h6>
                 </div>
             {{/if}}
          </div>
        </div>
